package com.example.analytics.controller;

import com.example.analytics.dto.MetricsSummaryResponse;
import com.example.analytics.service.AnalyticsService;

import java.util.Map;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/api/metrics")
public class MetricsController {

    private final AnalyticsService analyticsService;

    public MetricsController(AnalyticsService analyticsService) {
        this.analyticsService = analyticsService;
    }

    @GetMapping("/summary")
    public MetricsSummaryResponse getSummary() {
        return analyticsService.getSummaryMetrics();
    }
    
    @GetMapping("/revenue/last-hour")
    public Map<String, Object> revenueLastHour() {
        double value = analyticsService.getRevenueLastHour();
        return Map.of("revenueLastHour", value);
    }

}
