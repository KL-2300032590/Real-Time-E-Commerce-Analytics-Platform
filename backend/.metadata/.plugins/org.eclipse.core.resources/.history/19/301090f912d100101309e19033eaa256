package com.example.analytics.model;

package com.example.analytics.model; // Recommended package for JPA Entities

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;

// Optional: If you want to use Lombok for getters/setters/constructors
import lombok.Data; 
import lombok.NoArgsConstructor;
import lombok.AllArgsConstructor;

@Entity
@Table(name = "user_event_records") // Define the actual table name
@Data // Lombok annotation for Getters, Setters, toString, hashCode, equals
@NoArgsConstructor // Lombok annotation for no-arg constructor
@AllArgsConstructor // Lombok annotation for all-arg constructor
public class EventRecord {

    // 1. Primary Key
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    // 2. Data fields corresponding to your DTO
    private String eventType;
    private String userId;
    private String sessionId;
    private String productId;
    
    // Use String for currency and double/BigDecimal for price
    private Double price;
    private String currency;
    
    // Store as a standard database timestamp type (Long epoch millis is fine)
    private Long timestamp;

}