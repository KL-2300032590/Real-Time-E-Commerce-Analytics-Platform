package com.example.analytics.repo;

import com.example.analytics.model.EventRecord;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

@Repository
public interface UserEventRecordRepository extends JpaRepository<EventRecord, Long> {

    long countByEventType(String eventType);

    @Query("select coalesce(sum(e.price), 0) from EventRecord e where e.eventType = 'PURCHASE'")
    Double getTotalRevenue();

    @Query("select count(distinct e.userId) from EventRecord e")
    Long getUniqueUsers();
}